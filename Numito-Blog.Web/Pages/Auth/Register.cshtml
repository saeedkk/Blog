@page
@model Numito_Blog.Web.Pages.Auth.RegisterModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ثبت نام در سایت";
}

<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" asp-for="UserName" required="" id="username" />
        <span style="color: red; text-align: center; display: block;" asp-validation-for="UserName"></span>
    </div>
    <div>
        <input type="text" placeholder="نام و نام خانوادگی" asp-for="FullName"/>
        <span style="color: red; text-align: center; display: block;" asp-validation-for="FullName"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password" required="" id="password" />
        <span style="color: red; text-align: center; display: block;" asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" value="ثبت نام" />
        <a asp-page="Login" >ورود به سایت</a>
    </div>
</form>
