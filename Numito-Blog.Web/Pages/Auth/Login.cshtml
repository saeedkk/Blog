@page
@model Numito_Blog.Web.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}

<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" asp-for="UserName"/>
        <span style="color: red; text-align: center; display: block;" asp-validation-for="UserName"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password"/>
        <span style="color: red; text-align: center; display: block;" asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a asp-page="Register" >ثبت نام</a>
    </div>
</form>
