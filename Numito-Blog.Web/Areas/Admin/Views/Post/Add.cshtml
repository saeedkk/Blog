@using Numito_Blog.CoreLayer.Services.Categories;
@model Numito_Blog.Web.Areas.Admin.Models.Posts.CreatePostViewModel
@inject ICategoryService _CategoryService
@{
    ViewData["Title"] = "افزودن نوشته";
    ViewData["selected"] = "post";
    var categories = _CategoryService.GetAllCategory();
}
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a asp-area="Admin" asp-controller="Category" asp-action="Index">نوشته ها</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>

<section class="content">
    <form class="box box-danger" method="post" asp-area="Admin" asp-controller="Post" asp-action="Add" enctype="multipart/form-data" >
        <div class="box-body row">
            <div class="col-md-6">
                @Html.EditorFor(m => m.Title)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(m => m.Slug)
            </div>
            <div class="col-md-12">
                @Html.EditorFor(m => m.Description)
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="0">انتخاب کنید</option>
                        @foreach (var item in categories.Where(c => c.ParentId == null))
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SubCategoryId"></label>
                    <select asp-for="SubCategoryId" class="form-control"></select>
                    <span asp-validation-for="SubCategoryId"></span>
                </div>
            </div>
            <div class="col-md-12">
                @Html.EditorFor(m => m.ImageFile)
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
        </div>
    </form>
</section>

@section Scripts
{
    <script>
        $("#CategoryId").change(function() {
            var categoryId = $(this).val();
            console.log(categoryId);
            $.ajax({
                url: "/admin/category/GetChildCategories?parentId=" + categoryId,
                type: "get"
            }).done(function(data) {
                $("#SubCategoryId").html(`<option value="0">انتخاب کنید</option>`);
                for (var i in data) {
                    var category = data[i];
                    $("#SubCategoryId").append(`<option value='${category.id}'>${category.title}</option>`);
                }

                console.log(data);
            });
        })
    </script>
}
